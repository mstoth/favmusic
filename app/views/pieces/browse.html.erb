<h1>Browsing pieces</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Composer</th>
    <th>Genre</th>
    <th>Difficulty</th>
	<th>Recording</th>
    <th>Sheet Music</th>
    <th></th>
    <th></th>
  </tr>

<% @pieces.each do |piece| %>
  <tr>
    <td><%= piece.title %></td>
    <td><%= piece.composer %></td>
    <td><%= piece.genre %></td>
    <td><%= piece.difficulty %></td>
	<td><%= piece.recording %></td>
	<% if !piece.sheet.nil? %>
	<td><%= link_to 'Music', piece.sheet %></td>
	<% else %>
	<td>(None)</td>
	<% end %>
    <td><%= link_to 'Show', piece %></td>
    <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Piece', new_piece_path %>
