
<% if @mobile %>
<%= semantic_form_for(@piece, :style=>"width:100%") do |f| %>
<% else %>
<%= semantic_form_for(@piece) do |f| %>
<% end %>
  <% if @piece.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@piece.errors.count, "error") %> prohibited this piece from being saved:</h2>

      <ul>
      <% @piece.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <p> Be as specific as you can. Include Opus if you know it. </p>
    <%= f.input :title %> 
<br/>
    <%= f.input :composer %>

  <%= f.input :instrument, :as => :select, :collection => ['Piano','Voice', 'Violin', 'Viola', 'Cello', 'Bass', 'Trumpet', 'Trombone','French Horn','Tuba', 'Oboe','English Horn','Bassoon', 'Flute/Piccolo', 'Percussion'], :include_blank=>false %>

  <%= f.input :genre, :as => :select, :collection => ['Pre-Baroque','Baroque','Classical','Romantic','20th Century'], :include_blank => false %>
  <%= f.input :difficulty, :as => :select, :collection => ['Easy','Intermediate','Advanced'], :include_blank => false %>

  <p>Leave blank if you don't have a URL for a recording.</p>
    <%= f.input :recording, :required=>false %> 

    <%= f.action :submit, :as => :button %>
<% end %>
